<% if @shows.empty? %>
  <p><%= t 'shows.search.no_shows_found' %></p>
<% else %>
  <div class="btn-group pull-right">
    <a href="/shows/?q=<%= @query %>" class="btn btn-default btn-primary"><%= glyphicon 'th-large' %></a>
    <a class="btn btn-default btn-primary active"><%= glyphicon 'th-list' %></a>
  </div>
  <% @shows.each do |group, shows| %>
    <section>
      <%= h 6, group, class: 'list-header' %>
    <% shows.each do |show| %>
      <a href="/shows/<%= show.id %>">
        <div class="card small">
          <% unless show.poster.empty? %>
            <%= image "http://thetvdb.com/banners/#{show.poster}" %>
          <% end %>
          <div class="content"><%= h 1, show.name %></div>
        </div>
      </a>
    <% end %>
    </section>
  <% end %>

  <%= partial :'partials/paging', locals: { url: @url } %>
<% end %>

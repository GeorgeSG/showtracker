<ul id="show-tabs" class="nav nav-tabs">
  <li class="active">
    <a href="#info" data-toggle="tab"><%= t 'shows.overview' %></a>
  </li>
  <li>
    <a href="#actors" data-toggle="tab"><%= t 'general.actors' %></a>
  </li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <%= t('general.seasons') %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu" role="menu">
      <% @show.seasons.reverse.each do |season| %>
        <li>
          <a href="#season<%= season %>" data-toggle="tab">
            <% if season.zero? %>
              <%= t('shows.specials') %>
            <% else %>
              <%= "#{t('general.season')} #{season}" %>
            <% end %>
          </a>
        </li>
      <% end %>
    </ul>
  </li>
</ul>

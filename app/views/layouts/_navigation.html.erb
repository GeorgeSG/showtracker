<div class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only"><%= t('layout.toggle_navigation') %></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><%= t('layout.brand') %></a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><a href="/"><%= t('general.home') %></a></li>
        <li><a href="/shows"><%= t('general.shows') %></a></li>
        <% if user_signed_in? %>
          <li>
            <a href="/users/my-shows"><%= t('general.my_shows') %>
              <span class="label label-primary"><%= current_user.shows.count %></span>
            </a>
          </lI>
        <% end %>
      </ul>
      <form class="navbar-form navbar-left" id="search_form" action="/shows/" role="search">
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="<%= t 'general.search' %>">
          <button type="submit" class="btn btn-default">
            <%= glyphicon 'search' %>
          </button>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to('/user/preferences/') do %>
                  <%= glyphicon 'cog' %> <%= t('general.preferences') %>
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, :method => :delete do %>
                  <%= glyphicon 'off' %> <%= t('general.logout') %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('general.login'), new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

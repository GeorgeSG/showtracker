<div class="tab-pane fade in" id="actors">
  <h3><%= t 'general.actors' %></h3>
  <% if @show.actors.empty? %>
    <p>There are no actors listed in this show</o>
  <% else %>
    <table class="table table-striped table-hover">
      <thead><tr><th>Name</th></tr></thead>
      <tbody>
        <% @show.actors.each do |actor| %>
          <tr><td><%= link_to "/actors/#{actor.id}", actor.name %></td></tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

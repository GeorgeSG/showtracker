              <li><%= link_to '/users/logout', "#{glyphicon('off')} #{t 'general.logout'}" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to '/users/login', t('general.login') %></li>
        <% end %>
      </ul>
    </div>
  </div>

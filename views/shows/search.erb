<% if @shows.empty? %>
  <p>No shows found.</p>
<% else %>
  <% @shows.each do |group, shows| %>
    <section>
      <%= tag 'h6', group, class: 'list-header' %>
    <% shows.each do |show| %>
      <a href="/shows/<%= show.id %>">
        <div class="card small">
          <% unless show.poster.empty? %>
            <%= single_tag 'img', src: "http://thetvdb.com/banners/#{show.poster}" %>
          <% end %>
          <div class="content">
            <%= tag 'h1', show.name %>
          </div>
        </div>
      </a>
    <% end %>
    </section>
  <% end %>

  <%= partial :'partials/paging', locals: { url: @url } %>
<% end %>
